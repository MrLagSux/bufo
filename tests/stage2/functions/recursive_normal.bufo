const bool = @boolean();
const true = bool(1);

const i32 = @integer(32, true);
const i64 = @integer(64, true);
const none = @none();

let a = func (e: *i32, ctr: i64) {
    if ctr == 10 {
        return;
    }
    a(e, ctr + 1);
    *e = 10;
};

const main = func () -> i32 {
    let v = i32(0);
    a(&v, 0);
    if v != 10 {
        return 1;
    }
    return 0;
};

@entry(main);
