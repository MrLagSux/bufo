File: Fn*;

Fn = "func" "name" "(" ")" "{" Block "}";

Block = (Stmt*);

Stmt = StmtExpr | StmtLet | StmtAssign | StmtCall;

StmtExpr = Expr ";";
StmtLet = "let" "name" "=" Expr ";";
StmtAssign = "name" "=" Expr ";";
StmtCall = "name" "(" ")" ";";

Expr = ExprName
     | ExprLiteral
     | ExprBinary
     | ExprParen;
ExprName = "name";
ExprLiteral = "int";
ExprBinary = Expr ("+" | "-" | "*" | "/") Expr;
ExprParen = "(" Expr ")";