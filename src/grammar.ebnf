File: Fn*;

Fn = "func" "name" ParamList Block;

Param = "name" [","];
ParamList = "(" {Param} ")";

Block = "{" {Stmt} "}";

Stmt = StmtExpr
     | StmtLet
     | StmtAssign
     | StmtCall
     | StmtIf;

StmtExpr = Expr ";";
StmtLet = "let" "name" "=" Expr ";";
StmtAssign = "name" "=" Expr ";";
StmtCall = "name" ArgList ";";
StmtIf = "if" "(" Expr ")" Block {"else" Block};
StmtReturn = "return" [Expr] ";";

Arg = Expr [","];
ArgList = "(" {Arg} ")";

Expr = ExprName
     | ExprLiteral
     | ExprBinary
     | ExprParen;
ExprName = "name";
ExprLiteral = "int";
ExprBinary = Expr ("+" | "-" | "*" | "/" | "==" | "!=" | "<" | ">" | "<=" | ">=") Expr;
ExprParen = "(" Expr ")";